-#   グループを作成しました
-group__name = 'test'
-group__member = '翼'
.sideBer
  .sideHeader
    .sideHeader__box
      .box__userName
        = current_user.name
      %ul.box__menu
        %a
          %li.menu__newGroup
            = link_to new_group_path do
              %i.fa.fa-edit
        %a
          %li.menu__edit
            = link_to edit_user_path(current_user) do
              = fa_icon 'cog', class: 'icon'

  .sideGroups
    .sideGroup
      - current_user.groups.each do |group|
        = link_to '#' do
          .sideGroup__name
            = group.name
          .sideGroup__message
            メッセージはまだありません。
.main
  .mainHeader
    .mainGroup__name
      %h2
        #{group__name}
      %ul.mainGroup__lists
        %li.mainGroup__list
          Member:　#{group__member}
    %a
      .mainHeader__editBtn
        Edit
  .mainMessages
    .mainMessage
      .mainMessage__info
        %p.message__talker
          翼
        %p.message__date
          2019/08/11(Sun) 14:55:25
      %p.mainMessage__text
        message
  .form
    %form.newMessage(enctype="multipart/form-data" action="/groups/3135/messages" accept-charset="UTF-8" method="post")
