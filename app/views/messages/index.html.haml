      .input-box<>
        %input(placeholder="type a message" class="form__inputBox" type="text" name="message[content]")
        -# %label.upload-label{for: "upload-icon"}
        -#   %i.fa.fa-picture-o
        -#   = f.file_field :image, id: "upload-icon"
